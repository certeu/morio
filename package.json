{
  "name": "morio",
  "version": "0.1.0",
  "description": "Connect, Stream, Observe, Respond",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "npm run build:api && npm run build:core && npm run build:ui",
    "build:prod": "npm run build:api prod && npm run build:core prod && npm run build:ui prod",
    "build:api": "./scripts/build-container.sh api",
    "build:core": "./scripts/build-container.sh core",
    "build:ui": "./scripts/build-container.sh ui",
    "predev": "npm run reconfigure",
    "dev": "./core/run-container.sh",
    "dev:clean": "docker rm -f core api ui proxy ca broker console",
    "prod": "docker-compose -f compose/prod.yaml up",
    "prod:down": "docker-compose -f compose/prod.yaml down",
    "saltnburn": "./scripts/salt-and-burn.sh",
    "kickstart": "npm install && npm install --global husky && husky install && npm run prebuild",
    "reconfigure": "node scripts/reconfigure.mjs",
    "prebuild": "npm run reconfigure",
    "prettier": "npx prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/certeu/morio.git"
  },
  "author": "Joost De Cock <joost@joost.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/certeu/morio/issues"
  },
  "homepage": "https://github.com/certeu/morio#readme",
  "workspaces": [
    "api",
    "core",
    "schema",
    "shared",
    "config"
  ],
  "devDependencies": {
    "esbuild": "^0.19.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.3.1"
  }
}

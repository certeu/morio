- module: system
  datasets:
    - login
    - user
  period: 300s
  state.period: 24h
  login.wtmp_file_pattern: /var/log/wtmp*
  login.btmp_file_pattern: /var/log/btmp*
  user.detect_password_changes: true
  processors:
    - add_fields:
        target: morio
        fields.module: lin-system


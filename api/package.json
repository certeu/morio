{
  "name": "@morio/api",
  "version": "0.1.0",
  "description": "Morio Operator API (API)",
  "private": true,
  "scripts": {
    "build": "node build.mjs",
    "vbuild": "MORIO_ESBUILD_VERBOSE=1 node build.mjs",
    "clean": "rimraf dist",
    "dev": "nodemon src/index.mjs",
    "lint": "eslint --fix 'src/**' 'openapi/**' 'config/**' 'shared/**'",
    "prettier": "npx prettier --ignore-unknown --write .",
    "test": "npx mocha tests/index.mjs"
  },
  "imports": {
    "#config": "./config/index.mjs",
    "#config/roles": "./config/roles.mjs",
    "#config/services/*": "./config/services/*.mjs",
    "#controllers/*": "./src/controllers/*.mjs",
    "#lib/*": "./src/lib/*.mjs",
    "#routes/*": "./src/routes/*.mjs",
    "#shared/*": "./shared/*.mjs"
  },
  "dependencies": {
    "@otplib/preset-default": "^12.0.1",
    "axios": "^1.6.3",
    "bson": "^6.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "joi": "^17.11.0",
    "joi-to-swagger": "^6.2.0",
    "js-yaml": "^4.1.0",
    "kafkajs": "^2.2.4",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.unset": "^4.5.2",
    "node-forge": "^1.3.1",
    "node-jose": "^2.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-ldapauth": "^3.0.1",
    "pino": "^8.16.2",
    "qrcode": "^1.5.3",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "esbuild": "^0.19.9",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.2.3"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/certeu/morio.git"
  },
  "author": "Joost De Cock <joost@joost.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/certeu/morio/issues"
  },
  "homepage": "https://github.com/certeu/morio#readme"
}
